@using u21430854_HW06.Models
@model IPagedList<product>
@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "Products";
}

<head>
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
</head>

<h2>Products</h2>

<div class="row">
    @using (Html.BeginForm("Products", "Home", FormMethod.Get, new { @class = "col-12" }))
    {
        <input style="width: 400px;" name="prodName" type="text" placeholder="Search product name..." />
        <input type="submit" value="Search" class="btn btn-success" />
        <input type="button" value="Create" class="btn btn-primary" />
    }
</div>

@if (!String.IsNullOrEmpty(ViewBag.SearchTerm))
{ 
    <div>Showing results for @ViewBag.SearchTerm</div>        
}

<hr/>
<table id="products" class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Price</th>
            <th>Brand</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (product prod in Model)
            {
                <tr>
                    <td>@prod.product_name</td>
                    <td>@prod.model_year</td>
                    <td>R @prod.list_price</td>
                    <td>@prod.brand.brand_name</td>
                    <td>@prod.category.category_name</td>
                    <td>
                        Edit | Details | Delete
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">There are no products that match your criteria.</td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model, i => Url.Action("Products", "Home", new {i, prodName = Request.QueryString["prodName"]}))